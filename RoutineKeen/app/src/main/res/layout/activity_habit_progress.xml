<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="Current Habit Progress: "
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/habitTypeTextView"
        android:layout_width="339dp"
        android:layout_height="52dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="51dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/textView9"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:text="A total number of "
        app:layout_constraintLeft_toLeftOf="@+id/textView9"
        android:layout_marginTop="52dp"
        app:layout_constraintTop_toBottomOf="@+id/habitTypeTextView" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:text="Scheduled events completed"
        app:layout_constraintLeft_toLeftOf="@+id/textView11"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/totalEventsCount" />

    <ProgressBar
        android:id="@+id/scheduledProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="278dp"
        android:layout_height="31dp"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/habitTypeTextView"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/habitTypeTextView"
        app:layout_constraintHorizontal_bias="0.171" />

    <TextView
        android:id="@+id/totalEventsCount"
        android:layout_width="82dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        android:layout_marginLeft="91dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:text="habit events completed"
        app:layout_constraintLeft_toRightOf="@+id/totalEventsCount"
        app:layout_constraintTop_toTopOf="@+id/totalEventsCount" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="105dp"
        android:layout_height="22dp"
        android:text="You've practived"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/scheduledProgressBar"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView12"
        app:layout_constraintVertical_bias="0.481" />

    <TextView
        android:id="@+id/scheduledProgressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/textView13"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/scheduledProgressBar"
        app:layout_constraintHorizontal_bias="0.011"
        app:layout_constraintVertical_bias="0.416" />

</android.support.constraint.ConstraintLayout>