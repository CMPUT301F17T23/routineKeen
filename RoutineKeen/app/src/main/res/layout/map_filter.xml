<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/bigTitle"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:text="Geolocation and Maps"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="Filter"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bigTitle"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:text="Select events to display on map"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textStyle="italic"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:text="For nearby events only, specify below"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recentCheckBox" />

    <CheckBox
        android:id="@+id/personalCheckBox"
        android:onClick="onFilterCheckboxClicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <CheckBox
        android:id="@+id/followingCheckBox"
        android:onClick="onFilterCheckboxClicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Following"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/personalCheckBox"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/personalCheckBox" />

    <CheckBox
        android:id="@+id/recentCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="onFilterCheckboxClicked"
        android:text="Recent Events Only"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/personalCheckBox"
        app:layout_constraintTop_toBottomOf="@+id/followingCheckBox" />

    <EditText
        android:id="@+id/filterRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="3"
        android:inputType="number"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintLeft_toRightOf="@+id/rangeTextView" />

    <TextView
        android:id="@+id/rangeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Range:"
        android:hint="00"
        android:textSize="17dp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        app:layout_constraintTop_toTopOf="@+id/filterRange"
        app:layout_constraintVertical_bias="0.434"
        app:layout_constraintBottom_toBottomOf="@+id/filterRange"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/recentCheckBox"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/kmTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="km"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/filterRange"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        app:layout_constraintLeft_toRightOf="@+id/filterRange"
        app:layout_constraintTop_toTopOf="@+id/filterRange"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/filterNoFilterBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="proceed without filter"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/filterApplyBtn"
        app:layout_constraintRight_toRightOf="@+id/filterApplyBtn"
        app:layout_constraintLeft_toLeftOf="@+id/filterApplyBtn" />

    <Button
        android:id="@+id/filterApplyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:onClick="applyFilter"
        android:text="apply filter"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
