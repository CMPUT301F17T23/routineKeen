<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/bigTitle"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:text="Geolocation and Maps"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="Filter"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bigTitle"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:text="Select events to display on map"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textStyle="italic"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

    <CheckBox
        android:id="@+id/personalCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        android:layout_marginLeft="16dp" />

    <CheckBox
        android:id="@+id/followingCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Following"
        app:layout_constraintLeft_toLeftOf="@+id/personalCheckBox"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/personalCheckBox" />

    <EditText
        android:id="@+id/range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="3"
        android:inputType="number"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/followingCheckBox"
        app:layout_constraintLeft_toRightOf="@+id/rangeTextView"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/rangeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Range:"
        android:hint="00"
        android:textSize="17dp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        app:layout_constraintTop_toTopOf="@+id/range"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        app:layout_constraintVertical_bias="0.47"
        app:layout_constraintBottom_toBottomOf="@+id/range"
        app:layout_constraintLeft_toLeftOf="@+id/followingCheckBox" />

    <TextView
        android:id="@+id/kmTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="km"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/range"
        android:layout_marginBottom="5dp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        app:layout_constraintLeft_toRightOf="@+id/range" />

    <Button
        android:id="@+id/filterCancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="32dp"
        android:text="cancel"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="32dp" />

    <Button
        android:id="@+id/filterApplyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginRight="32dp"
        android:onClick="applyFilter"
        android:text="apply"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="32dp" />

    <TextView
        android:id="@+id/recentsOnly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recents Only"
        android:textSize="17dp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/toggleButton"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/toggleButton"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/rangeTextView" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ToggleButton"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/range"
        app:layout_constraintLeft_toRightOf="@id/recentsOnly"/>

</android.support.constraint.ConstraintLayout>
